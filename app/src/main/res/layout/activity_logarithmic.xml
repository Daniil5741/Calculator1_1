<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Logarithmic"
    style="@style/Foreground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_a_logarithmic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="int a"
            android:inputType="number"
            style="@style/MyStyleText"></EditText>

        <EditText
            android:id="@+id/edit_b_logarithmic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/MyStyleText"
            android:hint="@string/the_base_int_b"
            android:inputType="number"
            ></EditText>
    </LinearLayout>

    <Button
        android:id="@+id/button_logarithmic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/calculate_log_a_with_base_b"
        style="@style/Button"></Button>

    <TextView
        android:id="@+id/text_logarithmic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/MyStyleText"></TextView>
</LinearLayout>